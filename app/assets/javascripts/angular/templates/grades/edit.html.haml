-# This is the main template for the grading form,
-# all partials are loaded below.

%grade-points-overview(ng-if='vm.rawPointsType() != "PASS_FAIL"')

%loading-message(loading='vm.loading' message="Loading Grade...")

%grade-rubric(ng-if='vm.rawPointsType() == "RUBRIC"')

%article.grade-form-fields

  %grade-raw-points-input(ng-if='vm.rawPointsType() == "DEFAULT"')
  %grade-score-levels-select(ng-if='vm.rawPointsType() == "SCORE_LEVELS"')
  %grade-pass-fail-switch(ng-if='vm.rawPointsType() == "PASS_FAIL"')
  %grade-raw-points(ng-if='vm.rawPointsType() == "RUBRIC"')

  %grade-adjustment-points-input(ng-if='vm.rawPointsType() != "PASS_FAIL"')

  %grade-final-points(ng-if='vm.rawPointsType() != "PASS_FAIL"')

  .grade-section-label {{ vm.feedbackMessage }}
  %grade-file-uploader(ng-if='!vm.groupGrade')
  %grade-feedback-text-input

  %grade-earned-badges-select(ng-if='!vm.groupGrade' student-id='{{vm.recipientId}}' grade-id='{{vm.gradeService.grade.id}}')
  %hr.grading-divider

%grade-status
%hr.grading-divider

%grade-submit-buttons(submit-path='{{vm.submitPath}}' grade-next-path='{{vm.gradeNextPath}}')
%grade-last-updated
%hr.grading-divider
