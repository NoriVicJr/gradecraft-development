.pageContent
  = render partial: "layouts/alerts"

  %section
    .card{style: "height: 400px;"}
      .card-cap
        %img{src: "/images/csv-logo.png", height: "46px"}
      .card-block
        %h4.card-title CSV
        .card-text
        %p.card-text
          Upload a .csv file with user information to import users.

        = link_to "Import Users from CSV", import_users_path, class: "card-link button"

    - if current_course.allows_canvas?
      .card{style: "height: 400px;"}
        .card-cap
          %img{src: "/images/canvas-logo.png"}
        .card-block
          %h4.card-title Canvas LMS
          .card-text
          %p.card-text
            An open-source LMS from Instructure. Import users for the courses you are enrolled in as a teacher.

          - if !current_course.linked?(:canvas)
            %p.card-text
              You must add the Canvas integration and link the course first in order to import any Canvas assignments.

            = link_to "Add a Canvas Integration", integrations_path, class: "card-link button"
          -else
            = link_to "Import Canvas Users", users_importer_users_path(:canvas, current_course.linked_for(:canvas).provider_resource_id), class: "card-link button"
