.login
  .password-reset.login-form-container
    %h1 Welcome to GradeCraft, #{ @user.first_name }!
    %p
    = simple_form_for @user, url: activate_user_path(@token), :method => :post do |f|
      = hidden_field_tag :token, @token
      = hidden_field_tag :user, @user
      = f.submit "Activate Your Account", class: "login-button button"
