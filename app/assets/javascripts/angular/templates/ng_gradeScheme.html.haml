.grade-scheme-row

  %span.form_label Grade Letter
  %input.letter(name='letter' ng-model='element.letter')

  %span.form_label Level name
  %input.level(name='level' ng-model='element.level')

  %span.form_label Low Point Threshold
  %input.low-range(type='number' ng-model='element.lowest_points' index='{{index}}' name='lowest_points' max='{{element.highest_points}}')

  %span.form_label High Point Threshold
  %input.high-range(type='number' ng-model='element.highest_points' index='{{index}}' name='highest_points' min='{{element.lowest_points}}')

  .right
    %button.remove-element.button.alert(type='button' ng-click='gradeService.remove($index)')
      Remove
      %i.fa.fa-times

  %button.add-element.button(type='button' ng-click='gradeService.addNew($index)')
    %i.fa.fa-plus Add A Level
