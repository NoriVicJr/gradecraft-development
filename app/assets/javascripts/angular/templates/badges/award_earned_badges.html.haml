.badge-index-section
  .badge-icon-container{'ng-repeat'=>'badge in vm.BadgeService.badges'}
    %img{'ng-class'=>"(badge.earned_badge_count <= 0 ? 'badge-icon unearned' : 'badge-icon')", 'ng-src'=>'{{badge.icon}}'}
    %p.badge-name {{badge.name}}
    .gold-stars
      %i.fa.fa-fw.fa-star
        .earned-count {{badge.earned_badge_count}}
