%loading-message(loading='vmAssignmentEdit.loading' message="Loading Assignment Info...")
%article.assignment-form-fields.simple-form(ng-if="!vmAssignmentEdit.loading")

  %ul.edit-form-tabs-nav
    %li(ng-click="focusTab('basics')" ng-class="{'active': isFocusTab('basics')}")
      %a Basic Settings
    %li(ng-click="focusTab('details')" ng-class="{'active': isFocusTab('details')}")
      %a Assignment Details
    %li(ng-click="focusTab('unlocks')" ng-class="{'active': isFocusTab('unlocks')}")
      %a Unlock Conditions

  #tab1(ng-if="isFocusTab('basics')")
    %assignment-edit-basics(assignment="vmAssignmentEdit.assignments[0]")
  #tab2(ng-if="isFocusTab('details')")
    %assignment-edit-details(assignment="vmAssignmentEdit.assignments[0]")
  #tab3(ng-if="isFocusTab('unlocks')")
    %h2.form-title Unlocks
    .form-subsection
      %h3.form-subtitle
        Requirements
        %span.has-tooltip
          %i.fa.fa-info-circle
          .display-on-hover.hover-style
            Unlocks allow you to direct the sequence of content in your course. What do students need to do in order to unlock this {{termFor('assignment')}}?
      %unlock-conditions(condition-id="vmAssignmentEdit.assignments[0].id" condition-type="Assignment")



