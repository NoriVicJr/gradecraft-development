- if assignment.pass_fail?
  .italic.not_bold= "#{term_for :pass}/#{term_for :fail} Assignment"
- else
  .italic.not_bold= "#{points assignment.full_points} points possible"
- if assignment.threshold_points?
  .italic.not_bold= "#{points assignment.threshold_points} points threshold"
%br
- if assignment.open_at?
  .italic.not_bold= "Opens: #{assignment.open_at}"

- if assignment.due_at?
  .italic.not_bold= "Due: #{assignment.due_at}"

- if assignment.description.present?
  %hr.grading-divider

  %h3.uppercase Guidelines:
  - if assignment.assignment_files.present?
    %ul
      Downloads
      - assignment.assignment_files.each do |af|
        %li= link_to af.filename, af.url

  %p= raw assignment.description

- if assignment.assignment_type.description.present?
  %hr.grading-divider
  %h3.uppercase #{ assignment.assignment_type.name} Guidelines:

  %p= raw assignment.assignment_type.description
