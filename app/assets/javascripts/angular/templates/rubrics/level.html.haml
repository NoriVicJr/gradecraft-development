.level-items(name="levelForm" ng-form ng-submit="queueUpdateLevel()" ng-class="{nocredit: level.noCredit, 'level-meets-expectations': satifiesExpectations()}")

  %label
    %span.sr-only Level Name
    %input(type="text" ng-model="level.name" placeholder="Level Name" required ng-Maxlength=30 ng-change="queueUpdateLevel()" maxlength=30)

  %label
    %span.sr-only Level Points
    %input(type="number" ng-model="level.points" placeholder="Points" min=0 ng-change="queueUpdateLevel()" required)

  %label
    %span.sr-only Level Description
    %textarea(ng-model="level.description" placeholder="Description" value="{{level.description}}" ng-change="queueUpdateLevel()")

  %rubric-level-badges(level="level")

  %button.meets-expectations-status(ng-if="showExpectationButton()" type="button" ng-class="{'no-expectation': !meetsExpectationsSet()}") {{expectationsLabel()}}
  %button.meets-expectations-toggle(type="button" ng-class="{'remove': isMeetsExpectationsLevel()}" ng-click="updateMeetsExpectationsLevel()") {{expectationsHoverLabel()}}

  %button.delete(ng-if="!(level.full_credit || level.no_credit)" type="button" ng-click="deleteLevel()" ng-hide="level.required") X


