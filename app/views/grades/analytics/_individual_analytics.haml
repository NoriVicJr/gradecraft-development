- if presenter.has_grades?

  .class-analytics-wrapper
    .class-analytics-graph
      %h3 Grade Distribution
      #grades_per_assign{ "data-scores" => presenter.scores_for(current_student).to_json, class: ("student-distro" if current_student.present?) }
      .small
        %b Class Average: 
        #{points presenter.assignment.average} points
      .small
        %b Low Score: 
        #{points presenter.assignment.low_score} points
      .small
        %b High Score: 
        #{points presenter.assignment.high_score} points

    .class-analytics-graph
      %h3 Participants
      #numberComplete{"data-percent" => "#{presenter.participation_rate}"}

  .scores-earned-bar-chart
    %h3 Scores Earned
    #levels_per_assignment{"data-levels" =>  presenter.assignment.percentage_score_earned.to_json, class: ("student-distro" if current_student.present?) }
