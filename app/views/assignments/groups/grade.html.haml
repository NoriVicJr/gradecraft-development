= content_nav_for @assignment, "Group Grades"

%h3.pagetitle= @title

.pageContent
  = render "layouts/alerts"

  .bold #{term_for :students}
  %ul
    - @group.students.each do |s|
      %li= link_to s.name, student_path(s)

    - if @group.proposals.present?
      - @group.proposals.last do |prop|
        = prop.title

  - if @rubric
    = render partial: "/grades/rubric_edit", locals: { rubric: @rubric, return_path: URI(request.referer).path }
  - else
    = render partial: "standard_edit"
