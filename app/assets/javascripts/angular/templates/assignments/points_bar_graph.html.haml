.points-bar-graph.assignment-settings
  .points-bar-graph-fill.assignment-settings(style="{{pointsGraphStyle()}}")
  .points-bar-graph-fill.assignment-settings(ng-if="pointsBeingCapped()" style="{{pointsGraphStyleCapped()}}")
  %span.settings_hint(ng-if="pointsOver()") Total for this assignment type exceeds threshold for highest level
  .grade-level-marker(ng-repeat="gse in GradeSchemeElements" style="width: {{pointsGraphPercentOfTotal(gse)}}")
.assignment-type-points.assignment-settings
  %span(ng-if="!pointsBeingCapped()") {{ assignmentType.total_points | number }}
  %span(ng-if="pointsBeingCapped()")
    {{ assignmentType.summed_assignment_points | number }}
  %span.max-point-label(ng-if="pointsBeingCapped()") (max {{assignmentType.max_points | number}})
  %span / {{ totalPoints() | number }}
