.criterion(ng-class="{'criterion-not-saved': !criterionIsSaved()}")
  %label
    %span.sr-only Criterion Name
    %input(type="text" ng-model="criterion.name" name="name" placeholder="Criterion Name" value="{{criterion.name}}"  required ng-blur="queueUpdateCriterion()" ng-Maxlength=30 maxlength=30)
  %label
    %span.sr-only Criterion Max Points
    %input.points(type="number" ng-model="criterion.max_points" name="maxPoints" placeholder="Max Points"  required integer min=0 ng-blur="queueUpdateCriterion()")

  %label
    %span.sr-only Criterion Description
    %textarea.criterion-description(ng-model="criterion.description" placeholder="Description" value="{{criterion.description}}" ng-change="queueUpdateCriterion()")

  %button.delete(type="button" ng-click="deleteCriterion()") X

%ul.criterion-requirements(ng-if="!requirementsMet()")
  %li.requirements(ng-repeat="requirement in requirements()")
    {{ requirement }}


.level-container(ng-if="criterionIsSaved()")
  %rubric-criterion-levels.level-wrapper(criterion="criterion")
