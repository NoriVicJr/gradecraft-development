- presenter.earned_badges.each do |badge|
  .earned-badge
    .earned-badge-date
      = "Awarded #{ badge.created_at.strftime("%b %d") }"
    .earned-badge-feedback
      = "Feedback #{ raw badge.feedback }"

- unless presenter.earned_badges.empty?
  %p
    %button{ type: "button", class: "button", id: "backpack_issue", data: { issue_path: "#{ push_openbadge_path(presenter.badge.id) }",
      connect_url: "#{ connect_openbadges_url }", current_badge: "#{ presenter.badge.id }" } }
      %i.fa.fa-upload
      Export Badge to Mozilla Backpack
