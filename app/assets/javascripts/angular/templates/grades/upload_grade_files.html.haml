.feedback-upload
  %input(type="file" multiple="true" grade-files-upload="feedbackFiles")
.clear


%ul.grade-files-list(ng-if='vm.gradeFiles.length > 0')
  %li(ng-repeat='file in vm.gradeFiles')
    .grade-file-list-item
      .grade-file-delete-button(ng-if='!file.deleting')
        .no-hover-state
          %i.fa.fa-check.fa-fw
        .hover-state
          %i.fa.fa-times.fa-fw(ng-click="vm.deleteFile(file)")
        {{ file.filename }}
      .grade-file-delete-button(ng-if='file.deleting')
        %i.fa.fa-spinner.fa-fw
        {{ file.filename }}



