- content_for :public_class, 'public-with-background'
.login
  .alert-bkg= render "layouts/alerts"
  - if Rails.env.development? || Rails.env.production?
    .login-form-container
      .login-form
        .login-block
          %p
            %a.um-login.button{"aria-label": "University of Michigan Login", href: saml_init_path }
              = image_tag "UM.png", width: "30", class: "login-logo", "aria-hidden": true
              Log in with UM
          %hr.dotted
          %h1.bold Are you an instructor at UM interested in using GradeCraft?
          %p
            %a{ :href => new_external_users_path , class: "button account-create" } Create an Account

  - if Rails.env.development? || Rails.env.beta?
    .login-form-container
      .login-form
        .login-block
          = image_tag "GC.png", width: "30", class: "login-logo", alt: "GradeCraft logo mark"
          %h1 Log in
          = render partial: "user_sessions/form"
          %button.button-link.small#forgot-password Forgot your password?

        .password-forgot-form{"aria-hidden": "true"}
          %h1 Forgot Your Password?
          %p Enter the email address associated with your account, and you'll receive a link via email that will allow you to create a new password.*
          = render partial: "passwords/reset_form"

      .login-form
        .login-block
          %hr.dotted
          %h1.bold Are you an instructor interested in using GradeCraft?
          %p
            %a{ :href => new_external_users_path , class: "button account-create" } Try it out!
