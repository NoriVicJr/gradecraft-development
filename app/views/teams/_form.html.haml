= simple_form_for @team do |f|
  %section.form-section
    %h2.form-title Basic Info
    .form-item
      = f.label :name, "#{current_course.team_term} Name"
      = f.text_field :name
    .form-item
      %label Banner
      = f.file_field :banner
      .form-hint= "Upload a banner for this #{term_for :team}"
      - if @team.banner.present? && @team.errors[:banner].empty?
        %img{src: @team.banner, width: 40, alt: "Media Image" }
        = f.check_box :remove_banner
        Remove Image

    .form-item
      = f.association :students, :collection => current_course.students, as: :select

    .form-item
      = f.association :leaders, as: :check_boxes, :collection => current_course.staff

  .submit-buttons
    %ul
      %li= f.submit "#{@team.persisted? ? 'Update' : 'Create'} #{ term_for :team }", class: "button"
      %li= link_to glyph("times-circle") + "Cancel", teams_path, class: "button"
