%section.grade-adjustment-points
  %label.grade-section-label{for: "adjustment-points-input"} Adjustment Points

  %input#adjustment-points-input( type="text"
  placeholder="Enter adjustment points for grade"
  ng-model="grade.adjustment_points"
  smart-number
  allow-negatives="true"
  ng-change="queueUpdateGrade()")

%section.grade-adjustment-points-feedback(ng-if="grade.adjustment_points && grade.adjustment_points != 0")
  %label.grade-section-label{for: "adjustment-points-feedback"} Adjustment Points Feedback
  %textarea#adjustment-points-feedback(ng-model="grade.adjustment_points_feedback" ng-change="queueUpdateGrade()" froala="froalaOptions")
.clear
