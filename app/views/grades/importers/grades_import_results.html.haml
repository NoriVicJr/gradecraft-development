.pageContent
  = render "layouts/alerts"

  - unless @result.grades_import_result.unsuccessful.empty?
    %h4.subtitle
      = "#{@result.grades_import_result.unsuccessful.count} #{"Grade".pluralize(@result.grades_import_result.unsuccessful.count)} Not Imported"
    %table.dynatable
      %thead
        %tr
          %th Data
          %th Error(s)
      %tbody
        - @result.grades_import_result.unsuccessful.each do |row|
          %tr
            %td= row[:data]
            %td= row[:errors]

  %h4.subtitle
    = "#{@result.grades_import_result.successful.count} #{"Grade".pluralize(@result.grades_import_result.successful.count)} Imported Successfully"
  %table.dynatable
    %thead
      %tr
        %th Assignment
        %th Raw Points
        %th Score
    %tbody
      - @result.grades_import_result.successful.each do |grade|
        %tr
          %td= link_to grade.assignment.name, assignment_path(grade.assignment)
          %td= points grade.raw_points
          %td= grade.score
