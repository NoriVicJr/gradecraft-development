- if assignment.is_unlockable?
  %span.has-tooltip{tabindex: "0", "aria-describedby": "locked-assignment-tip_#{assignment.id}"}
    %i.fa.fa-lock
    .display-on-hover.hover-style{role: "tooltip", :id=> "locked-assignment-tip_#{assignment.id}"}
      %h3 This #{term_for :assignment} is Locked
      .small.italic In order to unlock it you must:
      %ol
        - assignment.unlock_conditions.each do |condition|
          %li= condition.requirements_description_sentence
- if assignment.is_a_condition?
  %span.has-tooltip{tabindex: "0", "aria-describedby": "key-assignment-tip_#{assignment.id}"}
    %i.fa.fa-key
    .display-on-hover.hover-style{role: "tooltip", :id=> "key-assignment-tip_#{assignment.id}"}
      %h3 This #{term_for :assignment} is a Key
      %ol
        - assignment.unlock_keys.each do |key|
          %li= key.key_description_sentence
- if assignment.has_groups?
  %span.has-tooltip{tabindex: "0", "aria-describedby": "group-assignment-tip_#{assignment.id}"}
    %i.fa.fa-group.fa-fw
    = tooltip("group-assignment-tip_#{assignment.id}", "This #{term_for :assignment} is completed by #{term_for :students} in #{term_for :groups}")
