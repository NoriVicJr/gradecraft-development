= content_nav_for "#{@title}"

%h3.pagetitle#tableCaption= @title

.context_menu
  %ul
    %li
      %a{:href => mass_edit_grade_scheme_elements_path }
        = glyph(:edit)
        Edit

.pageContent
  = render partial: "layouts/alerts"

  / Grade Scheme Elements Table Display
  %table{"aria-describedby" => "tableCaption"}
    %thead
      %tr
        %th{scope: "col"} Grade
        %th{scope: "col"} Level
        %th{scope: "col"} Low Points
        %th{scope: "col"} High Points
    %tbody
      - @grade_scheme_elements.each do |element|
        %tr
          %td= element.letter
          %td= element.level
          %td{data: { :"sort-value" => "#{element.low_points }" }}= points element.low_points
          %td{data: { :"sort-value" => "#{element.high_points }" }}= points element.high_points

  = render partial: "courses/grading_philosophy", locals: { course: current_course }
